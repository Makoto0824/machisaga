{
  "version": 2,
  "rewrites": [
    {
      "source": "/redirect/(.*)",
      "destination": "/redirect.html"
    },
    {
      "source": "/event-entry",
      "destination": "/event-entry.html"
    },
    {
      "source": "/admin",
      "destination": "/admin-panel.html"
    },
    {
      "source": "/event-redirect-strategy",
      "destination": "/event-redirect-strategy.html"
    },
    {
      "source": "/qr-generator",
      "destination": "/qr-redirect-generator.html"
    },
    {
      "source": "/url-monitoring",
      "destination": "/url-monitoring-system.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ],
  "env": {
    "SECRET": "machisaga-secret-key-2025"
  }
}
